{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./challenges",
        "outDir": "./dist",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "experimentalDecorators": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/node_modules/**",
    ]
}
